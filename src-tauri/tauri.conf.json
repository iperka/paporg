{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Paporg",
  "identifier": "com.iperka.paporg",
  "version": "0.1.2",
  "build": {
    "beforeDevCommand": { "script": "npm run dev", "cwd": "../web" },
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": { "script": "npm run build", "cwd": "../web" },
    "frontendDist": "../web/dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Paporg",
        "width": 1200,
        "height": 800,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' ipc: http://ipc.localhost https://ipc.localhost; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "category": "Productivity",
    "shortDescription": "Document processing and organization tool",
    "longDescription": "Paporg is a document processing and organization tool with OCR and GitOps-style configuration. It helps you automatically categorize and organize your documents."
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/iperka/paporg/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENDQzVBRUQ4M0I4MzY1QUUKUldTdVpZTTcySzdGekptS0J4TUE2VXRQYVNvMlh1MURpOHRYWUs4c2g3bTZaSHVNY0x3b2NlMjgK"
    }
  }
}
