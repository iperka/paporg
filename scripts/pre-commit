#!/bin/bash

# Pre-commit hook to run linting and formatting checks
# This helps catch CI issues before pushing

set -e

echo "Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# Check if we have staged Rust files
STAGED_RS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)

if [ -n "$STAGED_RS_FILES" ]; then
    echo -e "${YELLOW}Checking Rust formatting...${NC}"
    if ! cargo fmt -- --check; then
        echo -e "${RED}Rust formatting check failed!${NC}"
        echo "Run 'cargo fmt' to fix formatting issues."
        FAILED=1
    else
        echo -e "${GREEN}Rust formatting: OK${NC}"
    fi
fi

# Check if we have staged frontend files
STAGED_WEB_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '^web/' || true)

if [ -n "$STAGED_WEB_FILES" ]; then
    echo -e "${YELLOW}Running frontend lint...${NC}"
    if ! (cd web && npm run lint); then
        echo -e "${RED}Frontend lint failed!${NC}"
        echo "Fix the linting errors before committing."
        FAILED=1
    else
        echo -e "${GREEN}Frontend lint: OK${NC}"
    fi
fi

if [ $FAILED -eq 1 ]; then
    echo -e "${RED}Pre-commit checks failed. Please fix the issues above.${NC}"
    exit 1
fi

echo -e "${GREEN}All pre-commit checks passed!${NC}"
